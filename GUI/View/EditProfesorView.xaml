<Window x:Class="GUI.View.EditProfesorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GUI"
        xmlns:data="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="{DynamicResource AppTitleEProf}" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:LocalizedResourceDictionary />
            </ResourceDictionary.MergedDictionaries>
            <local:AddressConverter x:Key="AddressConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <data:EditProfesorView></data:EditProfesorView>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource FirstName}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtIme" Grid.Row="0" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.Ime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource LastName}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtPrezime" Grid.Row="1" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.Prezime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="2" Grid.Column="0" Content="{DynamicResource BirthDate}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtDatumRodjenja" Grid.Row="2" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.DatumRodjenja, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:dd/MM/yyyy}}" />

        <Label Grid.Row="3" Grid.Column="0" Content="{DynamicResource Address}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtAdresaStanovanja" Grid.Row="3" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.AdresaStanovanja, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource AddressConverter}}" />

        <Label Grid.Row="4" Grid.Column="0" Content="{DynamicResource PhoneNumber}" VerticalAlignment="Center"
               Margin="5" />
        <TextBox x:Name="TxtBrojTelefona" Grid.Row="4" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.KontaktTelefon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="5" Grid.Column="0" Content="{DynamicResource Email}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtEmailAdresa" Grid.Row="5" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.EmailAdresa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="6" Grid.Column="0" Content="{DynamicResource Title}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtZvanje" Grid.Row="6" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.Zvanje, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="7" Grid.Column="0" Content="{DynamicResource IDNumber}" VerticalAlignment="Center" Margin="5" />
        <TextBox x:Name="TxtLicnaKarta" Grid.Row="7" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.BrojLicneKarte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="8" Grid.Column="0" Content="{DynamicResource YearsOfWork}" VerticalAlignment="Center"
               Margin="5" />
        <TextBox x:Name="TxtGodineStaza" Grid.Row="8" Grid.Column="1" Margin="5"
                 Text="{Binding EditProfesor.GodineStaza, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Buttons -->
        <StackPanel Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Height="50" Margin="5">
            <Button Content="{DynamicResource Confirm}" Width="100" Height="45" Margin="5" Click="ConfirmButton_Click" />
            <Button Content="{DynamicResource Cancel}" Width="100" Height="45" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>